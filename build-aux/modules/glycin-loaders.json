{
    "buildsystem": "meson",
    "config-opts": [
        "-Dglycin-loaders=true",
        "-Dlibglycin=false"
    ],
    "modules": [
        {
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/lib/libheif-heic/bin",
                "/lib/libheif-heic/include",
                "/lib/libheif-heic/lib/cmake",
                "/lib/libheif-heic/lib/pkgconfig"
            ],
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app/lib/libheif-heic",
                "-DENABLE_SDL=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "name": "libde265",
            "sources": [
                {
                    "commit": "7ba65889d3d6d8a0d99b5360b028243ba843be3a",
                    "tag": "v1.0.16",
                    "type": "git",
                    "url": "https://github.com/strukturag/libde265.git",
                    "x-checker-data": {
                        "tag-pattern": "^v([\\d.]+)$",
                        "type": "git"
                    }
                }
            ]
        },
        {
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DWITH_LIBDE265_PLUGIN=On",
                "-DPLUGIN_DIRECTORY=/app/lib/libheif-heic/lib",
                "-DLIBDE265_INCLUDE_DIR=/app/lib/libheif-heic/include",
                "-DLIBDE265_PKGCONF_LIBRARY_DIRS=/app/lib/libheif-heic/lib",
                "-DWITH_JPEG_ENCODER=OFF",
                "-DWITH_OpenJPEG_ENCODER=OFF",
                "-DWITH_OPENJPH_ENCODER=OFF",
                "-DWITH_X265=OFF",
                "-DWITH_SvtEnc=OFF",
                "-DWITH_SvtEnc_PLUGIN=OFF",
                "-DWITH_AOM_ENCODER=OFF",
                "-DWITH_RAV1E_PLUGIN=OFF",
                "-DWITH_RAV1E=OFF",
                "-DWITH_EXAMPLES=OFF",
                "-DCMAKE_COMPILE_WARNING_AS_ERROR=OFF"
            ],
            "name": "libheif",
            "sources": [
                {
                    "commit": "f74700228336c8fa6d71f01d1fbbd8772985deea",
                    "tag": "v1.20.1",
                    "type": "git",
                    "url": "https://github.com/strukturag/libheif.git",
                    "x-checker-data": {
                        "tag-pattern": "^v([\\d.]+)$",
                        "type": "git"
                    }
                }
            ]
        }
    ],
    "name": "glycin-loaders",
    "sources": [
        {
            "sha256": "380aafe2bfb4eca0c45b42660ebff449600d00a43b609d5b1c83f795f5c8fb3c",
            "type": "archive",
            "url": "https://download.gnome.org/sources/glycin/1.2/glycin-1.2.3.tar.xz",
            "x-checker-data": {
                "name": "glycin",
                "type": "gnome"
            }
        }
    ]
}
